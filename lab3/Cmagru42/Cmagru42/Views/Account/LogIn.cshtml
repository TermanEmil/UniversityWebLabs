@model LoginViewModel

@{
    ViewData["Title"] = "Log In";
}

<div class="row">
    <div class="col-md-offset-3 col-md-6 col-sm-offset-1 col-sm-8 col-xs-12">
        <form asp-controller="AccountController" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <label asp-for="EmailOrUsername"></label>
            <input asp-for="EmailOrUsername" placeholder="Enter your Email or Username">
            <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
            
            <label asp-for="Password"></label>
            <input asp-for="Password" placeholder="Enter Password">
            <span asp-validation-for="Password" class="text-danger"></span>

            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe">
            <span asp-validation-for="RememberMe" class="text-danger"></span>
            
            <button type="submit" class="account-submit">Login</button>

            <br />

            <a asp-area="" asp-controller="Account" asp-action="Register">Not registred?</a> <br />
        </form>
    </div>
</div>
