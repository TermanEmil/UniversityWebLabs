@{
    ViewData["Title"] = "Log In";
}

<form>
    <div class="row">
        <div class="col-md-offset-3 col-md-6 col-sm-offset-1 col-sm-8 col-xs-12">
            <label for="uname"><b>Username</b></label>
            <input type="text" placeholder="Enter Username" name="uname" required="true">

            <label for="psw"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="psw" required="true">
        
        
            <button type="submit" class="account-submit">Login</button>

            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>

            <br />

            <a>Not registred?</a> <br />
            <a>Forgot password?</a>
        </div>
    </div>
</form>